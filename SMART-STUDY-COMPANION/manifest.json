{
  "manifest_version": 3,
  "name": "Smart Study Companion",
  "version": "1.0",
  "description": "Summarizes selected text for quick revision.",
  "permissions": ["activeTab",  "storage"],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
